@if (IsAllowed)
{
    @Allowed
}
else
{
    if (NotAllowed != null)
    {
        @NotAllowed(this)
    }
    else
    {
        <div class="cc-isolation-container @GetThemeClass()">
            <div class="cc-font-sans cc-font-overwrite cc-w-full cc-h-full cc-bg-brand-close-button-bg cc-flex cc-flex-col cc-items-center cc-justify-center cc-p-6 cc-text-brand-text">
                <p class="cc-text-xs cc-text-center">
                    @Localizer.GetLocalization(Options.Value.CheckOptions.Text)
                </p>

                <p class="cc-text-sm cc-text-center cc-font-semibold cc-mt-2">
                    @Localizer.GetLocalization(Category.TitleText)
                </p>

                <div class="cc-mt-5 cc-flex cc-flex-wrap cc-justify-center cc-gap-5">
                    <button @onclick="AcceptRequiredAsync" class="cc-block cc-p-3 cc-px-5  cc-rounded-md cc-bg-brand-accent cc-text-white cc-text-sm cc-font-semibold hover:cc-bg-brand-accent-dark cc-transition-all cc-duration-100 cc-ease-in-out">
                        @Localizer.GetLocalization(Options.Value.CheckOptions.AcceptText)
                    </button>

                    <button @onclick="async () => await CookieConsentService.ShowPreferencesModalAsync()" class="cc-text-sm cc-text-brand-text hover:cc-text-brand-link-highlight cc-transition-all cc-duration-100 cc-ease-in-out cc-flex cc-items-center">
                        @Localizer.GetLocalization(Options.Value.OpenPreferencesText)
                    </button>
                </div>
            </div>
        </div>
    }
}